{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/row-formatting.schema.json",
  "hideSelection": true,
  "hideListHeader": true,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "height": "68px",
      "margin-bottom": "6px",
      "max-width": "480px",
      "min-width": "206px",
      "display": "=if([$hideWelcome], 'none','flex')",
      "flex-flow": "row",
      "padding": "2px",
      "box-sizing": "border-box",
      "justify-content": "flex-start",
      "align-items": "center",
      "border-radius": "2px",
      "box-shadow": "rgba(0, 0, 0, 0) 0px 0px"
    },
    "attributes": {
      "class": "ms-Stack ms-card"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "height": "66px",
          "min-width": "66px",
          "width": "66px",
          "background-position": "50%",
          "background-size": "cover",
          "border-radius": "8px",
          "display": "flex",
          "flex-flow": "column",
          "align-items": "center",
          "justify-content": "center",
          "opacity": "0.7"
        },
        "attributes": {
          "class": "ms-Stack ms-CardSection ms-bgColor-themePrimary"
        },
        "children": [
          {
            "elmType": "div",
            "attributes": {
              "iconName": "BirthdayCake"
            },
            "style": {
              "display": "inline-block",
              "font-style": "normal",
              "font-weight": "400",
              "font-size": "34px"
            }
          }
        ]
      },
      {
        "elmType": "div",
        "attributes": {
          "class": "ms-Stack ms-CardSection"
        },
        "style": {
          "display": "flex",
          "flex-flow": "column",
          "width": "100%",
          "height": "auto",
          "box-sizing": "border-box",
          "-webkit-font-smoothing": "antialiased",
          "font-weight": "400",
          "margin": "0px",
          "vertical-align": "center",
          "padding": "16px"
        },
        "children": [
          {
            "elmType": "span",
            "attributes": {
              "class": "fui-Text"
            },
            "style": {
              "margin-bottom": "5px",
              "max-height": "38px",
              "display": "inline",
              "font-size": "16px",
              "font-weight": "600",
              "line-height": "20px"
            },
            "txtContent": "[$Persona.title]"
          },
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "flex-flow": "column",
              "width": "auto",
              "height": "auto",
              "box-sizing": "border-box",
              "-webkit-font-smoothing": "antialiased",
              "font-weight": "400",
              "margin": "0px",
              "padding": "0px"
            },
            "children": [
              {
                "elmType": "span",
                "style": {
                  "font-size": "14px",
                  "font-weight": "600",
                  "line-height": "16px"
                },
                "txtContent": "[$Persona.department]"
              }
            ]
          }
        ]
      }
    ]
  }
}
